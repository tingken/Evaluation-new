<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

	<RelativeLayout
        android:layout_width="1024px"
        android:layout_height="73px"
        android:background="@drawable/tab" >

        <ImageButton
            android:id="@+id/evaluation"
            android:layout_width="79px"
            android:layout_height="72px"
            android:background="@null" />
		
        <TextView
		    android:layout_width="5px"
		    android:layout_height="69px"
		    android:layout_marginTop="12px"
		    android:background="@drawable/white_line"
		    android:layout_toLeftOf="@+id/complaint"/>
		<com.romainpiel.shimmer.ShimmerTextView
            android:id="@+id/complaint"
            android:layout_width="140px"
            android:layout_height="66px"
            android:gravity="center"
            android:text="我要投诉"
            android:textSize="28px"
            android:textColor="#000000"
            android:background="@null"
            android:layout_toLeftOf="@+id/white_line" />
		<TextView
		    android:id="@id/white_line"
		    android:layout_width="5px"
		    android:layout_height="69px"
		    android:layout_marginTop="12px"
		    android:background="@drawable/white_line"
		    android:layout_toLeftOf="@+id/setting"/>
		    
>>>>>>> Stashed changes
        <ImageButton
            android:id="@+id/setting"
            android:layout_width="78px"
            android:layout_height="66px"
            android:background="@drawable/btn_setting_selector"
            android:layout_toLeftOf="@+id/time" />

        <TextView
            android:layout_width="102px"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/dateweek"
            android:id="@+id/time"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="30px" />
        <LinearLayout
            android:layout_width="110px"
			android:layout_height="fill_parent"
			android:id="@+id/dateweek"
			android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"
			android:gravity="center"
			android:orientation="vertical" >
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:id="@+id/week"
	            android:gravity="center"
	            android:textColor="#FFFFFF"
	            android:textSize="20px" />
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:id="@+id/date"
	            android:gravity="center"
	            android:textColor="#FFFFFF"
	            android:textSize="20px" />
		</LinearLayout>
	</RelativeLayout>
	<RelativeLayout
        android:layout_width="1024px"
        android:layout_height="527px"
        android:background="@drawable/home_bg" >
    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">

    	<LinearLayout
    	    android:layout_width="396px"
    	    android:layout_height="fill_parent"
    	    android:orientation="vertical" >
        	<LinearLayout
	    	    android:layout_width="340px"
	    	    android:layout_height="457px"
	    	    android:layout_marginLeft="58px"
	    	    android:layout_marginTop="27px"
	    	    android:orientation="vertical" >

	    	    <LinearLayout
	    	        android:layout_width="match_parent"
	    	        android:layout_height="239px"
	    	        android:orientation="horizontal" >
					<FrameLayout
				        android:layout_width="133px"
				        android:layout_height="201px"
		    	        android:layout_marginLeft="29px"
		    	        android:layout_marginTop="5px"
		    	        android:background="#ffffff"
		    	        android:layout_gravity="center" >
			    	    <ImageView
			    	        android:id="@+id/photo"
			    	        android:layout_width="match_parent"
			    	        android:layout_height="match_parent" />
		    	    	<LinearLayout
			    	        android:layout_width="match_parent"
			    	        android:layout_height="35px"
			    	        android:gravity="center"
							android:layout_marginTop="166px">

							<TextView
							    android:id="@+id/leave_message"
							    android:textColor="#ffffff"
							    android:textSize="18px"
							    android:gravity="center"
							    android:layout_width="112px"
							    android:layout_height="match_parent"/>"
						</LinearLayout>
		    	    </FrameLayout>

		    	    <LinearLayout
		    	        android:layout_width="147px"
		    	        android:layout_height="fill_parent"
		    	        android:layout_marginTop="12px"
		    	        android:layout_marginLeft="10px"
		    	        android:orientation="vertical" >
			    	    <com.evaluation.util.MarqueeView
			    	        android:layout_width="match_parent"
			    	        android:layout_height="wrap_content"
			    	        android:layout_marginTop="120px"
			    	        android:layout_marginLeft="15px"
			    	        android:id="@+id/user_name"
			    	        android:marqueeRepeatLimit="marquee_forever"
			    	        android:singleLine="true"
							android:ellipsize="marquee"
							android:focusableInTouchMode="true"
							android:focusable="true"
			    	        android:textSize="30px"
			    	        android:textColor="#c61820"/>
			    	    <LinearLayout
			    	    android:layout_width="fill_parent"
			    	    android:layout_height="wrap_content"
		    	        android:layout_marginTop="10px"
		    	        android:background="@null"
			    	    android:orientation="horizontal">
			    	    	<TextView 
							android:layout_width="wrap_content"
			    	        android:layout_height="wrap_content"
			    	        android:layout_marginLeft="15px"
			    	        android:text="工号"
			    	        android:textSize="18px"
			    	        android:textColor="#c61820"/>
			    	    	<com.evaluation.util.MarqueeView  
			    	    	    android:layout_width="100px"
			    	    	    android:layout_height="wrap_content"
			    	    	    android:id="@+id/account"
			    	    	    android:gravity="center"
			    	    	    android:background="@null"
			    	    	    android:textSize="18px"
			    	        android:textColor="#c61820"/>
						</LinearLayout>
			    	    <LinearLayout
			    	    android:layout_width="wrap_content"
			    	    android:layout_height="wrap_content"
		    	        android:layout_marginTop="5px"
			    	    android:orientation="horizontal"> 
			    	    	<TextView
			    	        android:layout_width="wrap_content"
			    	        android:layout_height="wrap_content"
			    	        android:layout_marginLeft="15px"
			    	        android:text="部门"
			    	        android:textSize="18px"
			    	        android:textColor="#c61820"/>
			    	    	<com.evaluation.util.MarqueeView 
			    	    	    android:layout_width="100px"
			    	    	    android:layout_height="wrap_content"
			    	    	    android:id="@+id/org"
			    	    	    android:gravity="center"
			    	    	    android:background="@null"
			    	    	    android:singleLine="true"
								android:ellipsize="marquee"
								android:focusableInTouchMode="true"
								android:focusable="true"
								android:marqueeRepeatLimit="marquee_forever"
			    	    	    android:textSize="18px"
			    	        	android:textColor="#c61820"/>
			    	    </LinearLayout>
			    	    
		    	    </LinearLayout>
        		</LinearLayout>
        		<LinearLayout
	    	    android:layout_width="fill_parent"
	    	    android:layout_height="fill_parent"
	    	    android:orientation="vertical" >
		    	    <TextView
		    	        android:layout_width="wrap_content"
		    	        android:layout_height="wrap_content"
		    	        android:layout_marginTop="33px"
		    	        android:layout_marginLeft="40px"
		    	        android:text="受理业务："
		    	        android:textColor="#000000"
		    	        android:textSize="20px"/>

		    	    <TextView
		    	        android:id="@+id/acceptBiz"
		    	        android:layout_width="261px"
		    	        android:layout_height="130px"
		    	        android:layout_marginLeft="40px"
		    	        android:layout_marginTop="4px"
		    	        android:maxLines="6"
		    	        android:ellipsize="marquee"
				        android:focusable="true" 
				        android:marqueeRepeatLimit="marquee_forever" 
				        android:focusableInTouchMode="true" 
				        android:scrollHorizontally="true"
		    	        android:scrollbars="vertical"
		    	        android:textSize="18px"
		    	        android:textColor="#000000" />
        	
        	</LinearLayout>
        	</LinearLayout>
        </LinearLayout>
        <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="14px">
        	<LinearLayout
	        android:orientation="horizontal"
	        android:layout_width="fill_parent"
	        android:layout_height="379px">
			    <FrameLayout
			        android:layout_width="545px"
			        android:layout_height="352px"
			        android:layout_marginTop="27px" >
			        <com.evaluation.util.VerticalViewPager
			            android:id="@+id/vp"
			            android:layout_width="507px"
			            android:layout_height="309px"
			            android:layout_marginLeft="20px"
			            android:layout_marginTop="13px" />
						<LinearLayout
			                android:layout_width="407px"
			                android:layout_height="220px"
			            	android:layout_marginLeft="70px"
			            	android:layout_marginTop="50px"
			            	android:orientation="vertical" >
			    	        <TextView
				                android:id="@+id/tv_title"
				                android:layout_width="fill_parent"
				                android:layout_height="wrap_content"
				                android:gravity="center"
				                android:singleLine="true"
				                android:textColor="#000000"
				                android:textSize="30px" />
			    	        <TextView
				                android:id="@+id/tv_date"
				                android:layout_width="fill_parent"
				                android:layout_height="wrap_content"
				                android:gravity="right"
				                android:singleLine="true"
				                android:textColor="#000000"
				                android:textSize="18px" />
			    	        <LinearLayout
				                android:layout_width="fill_parent"
				                android:layout_height="fill_parent"
				            	android:layout_marginTop="5px"
				            	android:gravity="center"
				            	android:orientation="vertical" >
				    	        <TextView
					                android:id="@+id/tv_content"
					                android:layout_width="fill_parent"
					                android:layout_height="wrap_content"
					                android:gravity="center"
					                android:textColor="#000000"
					                android:lineSpacingExtra="10px"
					                android:textSize="22px" />
			    	        </LinearLayout>
			            </LinearLayout>
			            <LinearLayout
			                android:layout_width="fill_parent"
			                android:layout_height="wrap_content"
			            	android:layout_marginRight="40px"
			            	android:layout_marginBottom="45px"
			            	android:layout_gravity="bottom"
			            	android:orientation="horizontal"
			            	android:id="@+id/dots"
			                android:gravity="right" >		                    
			            </LinearLayout>
			            <RelativeLayout
			        	android:layout_width="fill_parent"
			        	android:layout_height="30px"
			        	android:layout_marginLeft="20px"
			        	android:layout_gravity="bottom" >
			        		<TextView
				                android:layout_width="wrap_content"
				                android:layout_height="fill_parent"
				                android:gravity="center"
				                android:textColor="#ffffff"
				                android:textSize="15px" />
			    		</RelativeLayout>
			    </FrameLayout>
		    </LinearLayout>
		    <LinearLayout
        		android:orientation="horizontal"
        		android:layout_width="fill_parent"
        		android:layout_height="fill_parent">
		        <Button
		            android:id="@+id/businessGuide"
		            android:layout_width="110px"
        			android:layout_height="44px"
        			android:layout_marginTop="42px"
        			android:gravity="center"
        			android:text="办事指南"
        			android:textColor="#ffffff"
		            android:background="@drawable/web_btn_selector">
		        </Button>
		        <Button
		            android:id="@+id/jobStatements"
		            android:layout_width="110px"
        			android:layout_height="44px"
        			android:layout_marginTop="42px"
        			android:gravity="center"
        			android:text="岗位职责"
        			android:textColor="#ffffff"
		            android:background="@drawable/web_btn_selector">
		        </Button>
		        <Button
		            android:id="@+id/servicePromises"
		            android:layout_width="110px"
        			android:layout_height="44px"
        			android:layout_marginTop="42px"
        			android:gravity="center"
        			android:text="服务承诺"
        			android:textColor="#ffffff"
		            android:background="@drawable/web_btn_selector">
		        </Button>
		        <Button
		            android:id="@+id/inf_center"
		            android:layout_width="110px"
        			android:layout_height="44px"
        			android:layout_marginTop="42px"
        			android:gravity="center"
        			android:text="通知中心"
        			android:textColor="#ffffff"
		            android:background="@drawable/web_btn_selector">
		        </Button>
		        <Button
		            android:id="@+id/accessWeb"
		            android:layout_width="110px"
        			android:layout_height="44px"
        			android:layout_marginTop="42px"
        			android:gravity="center"
        			android:text="访问网络"
        			android:textColor="#ffffff"
		            android:background="@drawable/web_btn_selector">
		        </Button>
		    </LinearLayout> 
        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>
</LinearLayout>