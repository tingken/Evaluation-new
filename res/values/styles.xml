<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="dot_style">
        <item name="android:layout_width">10dip</item>
        <item name="android:layout_height">10dip</item>
        <item name="android:background">@drawable/dot_normal</item>
        <item name="android:layout_marginLeft">3dip</item>
        <item name="android:layout_marginRight">3dip</item>
    </style>
	<style name="LoginCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">    
    	<item name="android:button">@drawable/chk_selector</item>    
    	<item name="android:paddingLeft">10dip</item>  
	</style>
	<style name="Theme_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
	</style>
	<style name="textViewStyle">
         <item name="android:textStyle">bold</item>
         <item name="android:shadowColor">#ffffff</item>
         <item name="android:shadowDx">1</item>
         <item name="android:shadowDy">1</item>
         <item name="android:shadowRadius">1</item>
    </style>
</resources>
